  "repository": "https://github.com/chriscdn/promise-retry",
  "author": "Christopher Meyer <chris@schwiiz.org>",
  "license": "MIT",
  "type": "module",
  "source": "./src/index.ts",
  "main": "./lib/promise-retry.cjs",
